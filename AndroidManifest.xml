        <activity
            android:name=".ViewNowPlaying"
            android:label="@string/title_activity_view_now_playing" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.lasthopesoftware.jrmediastreamer.ViewFiles" />
        </activity>
    </application>

</manifest>
<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.lasthopesoftware.bluewater"
    android:versionCode="2"
    android:versionName="1.5" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="20" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name="com.lasthopesoftware.bluewater.MainApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:logo="@drawable/ic_stat_water_drop_white"
        android:theme="@style/AppTheme" >
        
        <meta-data android:name="android.app.default_searchable" android:value="com.lasthopesoftware.bluewater.activities.SearchFiles" /> 
        
        <!-- Begin Connection intents -->
        <activity
            android:name="com.lasthopesoftware.bluewater.activities.InstantiateSessionConnection"
            android:label="@string/app_name"
            android:noHistory="true"
            android:launchMode="singleTop" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity
            android:name="com.lasthopesoftware.bluewater.activities.WaitForConnection"
            android:label="@string/title_activity_wait_for_connection"
            android:noHistory="true"
            android:launchMode="singleTop" >
        </activity>
        
        <activity
            android:name="com.lasthopesoftware.bluewater.activities.SelectServer"
            android:label="@string/title_activity_select_server"
            android:noHistory="true" >
        </activity>
        
        <activity
            android:name="com.lasthopesoftware.bluewater.activities.SetConnection"
            android:label="@string/title_activity_set_up_connection"
            android:noHistory="true" >
            
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.lasthopesoftware.bluewater.activities.SelectServer" />
        </activity>
        <!-- End Connection intents -->
        
        <activity
            android:name="com.lasthopesoftware.bluewater.activities.BrowseLibrary"
            android:label="@string/app_name"
            android:launchMode="singleTask" >
            
        </activity>
        
        <activity
            android:name="com.lasthopesoftware.bluewater.activities.ViewFiles"
            android:label="@string/title_activity_file_view" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.lasthopesoftware.bluewater.activities.BrowseLibrary" />
        </activity>
        
        <activity
            android:name="com.lasthopesoftware.bluewater.activities.ViewFileDetails"
            android:label="@string/title_activity_file_view" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.lasthopesoftware.bluewater.activities.ViewFiles" />
        </activity>
        
        <activity
            android:name="com.lasthopesoftware.bluewater.activities.ViewPlaylists"
            android:label="@string/title_activity_file_view" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.lasthopesoftware.bluewater.activities.BrowseLibrary" />
        </activity>
        
        <activity
            android:name="com.lasthopesoftware.bluewater.activities.SearchFiles"
            android:label="@string/title_activity_search_files"
            android:launchMode="singleTop">
            
		    <intent-filter>
		        <action android:name="android.intent.action.SEARCH" />
		    </intent-filter>
		    
			<meta-data android:name="android.app.searchable" android:resource="@xml/searchable" />
			
			<meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.lasthopesoftware.bluewater.activities.BrowseLibrary" />
		</activity>
        
        <activity
            android:name="com.lasthopesoftware.bluewater.activities.ViewNowPlaying"
            android:label="@string/title_activity_view_now_playing"
            android:launchMode="singleTask" >
        </activity>
        
        <activity
            android:name="com.lasthopesoftware.bluewater.activities.ViewNowPlayingFiles"
            android:label="@string/title_activity_view_now_playing"
            android:launchMode="singleTask" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.lasthopesoftware.bluewater.activities.ViewNowPlaying" />
        </activity>

        <receiver android:name="com.lasthopesoftware.bluewater.receivers.MusicIntentReceiver" >
            <intent-filter>
                <action android:name="android.media.AUDIO_BECOMING_NOISY" />
            </intent-filter>
        </receiver>
        <receiver android:name="com.lasthopesoftware.bluewater.receivers.RemoteControlReceiver" >
            <intent-filter>
                <action android:name="android.intent.action.MEDIA_BUTTON" />
            </intent-filter>
        </receiver>
        
        <service
            android:name="com.lasthopesoftware.bluewater.services.StreamingMusicService"
            android:enabled="true"
            android:exported="false" >
        </service>

        
    </application>

</manifest>

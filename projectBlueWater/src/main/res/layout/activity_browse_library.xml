<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:id="@+id/browseLibraryRelativeLayout">

	<android.support.v4.widget.DrawerLayout
			android:id="@+id/drawer_layout"
			android:layout_width="match_parent"
			android:layout_height="match_parent">

		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent">
			<ProgressBar
				android:id="@+id/pbLoadingViews"
				style="?android:attr/progressBarStyleLarge"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_alignParentLeft="false"
				android:layout_alignParentStart="false"
				android:layout_alignParentTop="false"
				android:layout_centerInParent="true"
				android:visibility="invisible" />

			<com.astuetz.PagerSlidingTabStrip
				android:id="@+id/tabsLibraryViews"
				android:layout_width="match_parent"
				android:layout_height="48dip" />
			<android.support.v4.view.ViewPager
				android:id="@+id/libraryViewPager"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_below="@+id/tabsLibraryViews" />
		</RelativeLayout>

		<ListView
			android:id="@+id/lvLibraryViewSelection"
			android:layout_width="240dp"
			android:layout_height="match_parent"
			android:layout_gravity="start"
			android:orientation="vertical"
			android:dividerHeight="0dp"
			android:background="@color/clearstream_blue"/>

	</android.support.v4.widget.DrawerLayout>
</RelativeLayout>
    <android.support.v7.widget.SwitchCompat
        android:id="@+id/btnSelectServer"
        style="?android:attr/buttonBarButtonStyle"
        android:layout_toLeftOf="@id/btnConfigureServer"
        android:layout_toStartOf="@id/btnConfigureServer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true" />

    <TextView
        android:id="@+id/tvServerItem"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/btnSelectServer"
        android:layout_toStartOf="@id/btnSelectServer"
        android:padding="@dimen/standard_textview_padding"
        android:text=""
        android:ellipsize="end"
        android:singleLine="true"
        android:textAppearance="?android:attr/textAppearanceLarge" />
	
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llViewFileDetails"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

	<RelativeLayout
	    android:id="@+id/rlMainFileInformation"
	    android:layout_width="match_parent"
	    android:layout_height="0dp"
        android:layout_weight="2"
	    android:layout_marginBottom="10dp"
        android:orientation="horizontal"
        android:background="@color/faint_gray">
	    
        <RelativeLayout
            android:layout_width="wrap_content"
            android:paddingRight="10dp"
            android:layout_height="match_parent"
            android:id="@+id/rlFileThumbnailContainer">
            <ProgressBar
                android:id="@+id/pbLoadingFileThumbnail"
                style="?android:attr/progressBarStyleLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/imgFileThumbnail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitCenter"
                android:contentDescription="@string/lbl_track_img"/>
        </RelativeLayout>

	    
	    <TextView
	        android:id="@+id/tvFileName"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_alignParentTop="true"
	        android:layout_toRightOf="@id/rlFileThumbnailContainer"
	        android:ellipsize="end"
	        android:lines="2"
	        android:maxLines="2"
	        android:textAppearance="?android:attr/textAppearanceLarge" />

	    <!--<RatingBar-->
	        <!--android:id="@+id/rbFileRating"-->
	        <!--android:layout_width="wrap_content"-->
	        <!--android:layout_height="wrap_content"-->
	        <!--android:layout_below="@id/tvFileName"-->
	        <!--android:layout_toRightOf="@id/imgFileThumbnail"-->
	        <!--android:indeterminate="false"-->
	        <!--android:isIndicator="false"-->
	        <!--android:minHeight="57dp"-->
	        <!--android:visibility="gone" />-->

        <View
            android:layout_width="match_parent"
            android:layout_height="10sp"
            android:background="@drawable/black_white_gradient"
            android:layout_alignParentBottom="true"/>
	</RelativeLayout>

	<RelativeLayout
	    android:id="@+id/rlFileDetails"
	    android:layout_width="wrap_content"
	    android:layout_height="0dp"
        android:layout_weight="3"
	    android:layout_below="@id/rlMainFileInformation" >

		<ProgressBar
		    android:id="@+id/pbLoadingFileDetails"
		    style="?android:attr/progressBarStyleLarge"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_centerInParent="true"
		    android:visibility="invisible" />

		<ListView
		    android:id="@+id/lvFileDetails"
		    android:layout_width="match_parent"
		    android:layout_height="match_parent" >
		</ListView>

	</RelativeLayout>

</LinearLayout>